<h1 class="title">Shop</h1>

<table>
    <thead>
        <th>Appliances</th>    
    </thead>

    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td>
                    <figure>
                        <%= product.image.attached? ? image_tag(product.image, width: 250) : " " %>
                    </figure>
                </td>
                
                <td><strong><%= link_to product.product_name.capitalize, product_path(product) %> </strong></td>
               
                <td> <strong>Current location: </strong><%= product.current_country.capitalize %></td>
                <td> Price: <%= number_to_currency product.price %> AUD</td>
                
                <td><%= link_to 'Product Details', product, class: 'button is-primary is-outlined is-small is-rounded' %></td>
                <% if current_user == product.user %>
                    <td><%= link_to 'Edit', edit_product_path(product), class: 'button is-small is-outlined is-rounded is-warning' %></td>
                    <td><%= link_to 'Destroy', product, method: :delete, class: 'button is-small is-outlined is-rounded is-warning', data: { confirm: 'Are you sure?' } %></td>
                <% end %>   
            </tr>
        <% end %>
    </tbody>
</table>
